<div class="px-5">
  <h1 class="font-bold text-4xl text-blue-500 mb-3">Payments</h1>
  <%= link_to 'New Payment', new_payment_path, class: 'btn btn-outline-info' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Description</th>
      <th>Status</th>
      <th>Approved At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%- @payments.each do |payment| %>
      <tr>
        <td><%= display_amount(payment.amount, payment.currency) %></td>
        <td><%= payment.currency.upcase %></td>
        <td><%= payment.description %></td>
        <td><%= display_status(payment.status) %></td>
        <td>
          <% if payment.approved_at %>
            <%= l(payment.approved_at, format: :long) %>
          <% else %>
            ---
          <% end %>
        </td>
        <td>
          <%- if payment.draft? %>
            <%= link_to 'Request Approval', request_payment_payment_path(payment), method: :put, data: { confirm: "Request for approval?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>