<h1 class="font-bold text-4xl text-blue-500">Request Payments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <%- @payments.each do |payment| %>
      <tr>
        <td><%= display_amount(payment.amount, payment.currency) %></td>
        <td><%= payment.currency.upcase %></td>
        <td><%= payment.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>